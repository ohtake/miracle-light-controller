{
  "name": "miracle-light-controller",
  "version": "1.0.0",
  "license": "ISC",
  "main": "src/mlc.js",
  "scripts": {
    "clean": "rimraf ./dist ./develop",
    "check:types": "tsc --noEmit",
    "build": "run-p -l check:* build:*",
    "build:static": "cpx ./static/**/* dist/",
    "build:bundle": "esbuild src/mlc.ts --bundle --outfile=dist/mlc.bundle.js --minify",
    "start": "run-p -l watch:*",
    "watch:types": "tsc --noEmit --watch",
    "watch:static": "cpx ./static/**/* develop/ -w",
    "watch:bundle": "esbuild src/mlc.ts --bundle --outfile=develop/mlc.bundle.js --watch"
  },
  "dependencies": {
    "tone": "^14.7.77"
  },
  "devDependencies": {
    "cpx2": "^4.2.3",
    "esbuild": "^0.17.17",
    "npm-run-all2": "^6.0.5",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.4"
  }
}
